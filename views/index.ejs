<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href='https://css.gg/shopping-cart.css' rel='stylesheet'>
    <link href='https://css.gg/instagram.css' rel='stylesheet'>
    <link href='https://css.gg/facebook.css' rel='stylesheet'>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/style.css">
    <link rel="ico" href="/logo.jpg">
    <title>Enchu</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12 header">
          <h1 class="title">Enchu</h1>
          <img src="./logo.jpg" alt="logo.jpg" class="img img-thumbnail float-end">
        </div>
      </div>
      <div class="row parts">
        <div class="col-md-3 col-sm-12">
          <h4>Redes Sociales</h4>
          <div class="color-balls">
            <div class="white-fnt"><i class="gg-instagram"></i></div>
            <div class="white-fnt"><i class="gg-facebook"></i></div>
          </div>
        </div>
        <div class="col-md-3 col-sm-12">
          <h4>Colores</h4>
          <div class="color-balls">
            <div class="cyan"></div>
            <div class="black"></div>
            <div class="white"></div>
            <div class="melon"></div>
            <div class="red"></div>
            <div class="green"></div>
          </div>
        </div>
        <div class="col-md-3 card">
          <h4 class="card-title">Precio</h4>
          <p class="card-text">s/ 16</p>
        </div>
        <div class="col-md-2 btn btn-primary buy-btn">
          <span>Comprar</span>
          <i class="gg-shopping-cart"></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h3>Imagenes referenciales</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12" id="img-ref">
          <img src="./p-1.jpg" alt="p-1.jpg" class="img-fluid img-ref" id="img-p-1">
          <img src="./p-2.jpg" alt="p-2.jpg" class="img-fluid img-ref" id="img-p-2">
          <img src="./p-3.jpg" alt="p-3.jpg" class="img-fluid img-ref" id="img-p-3">
          <img src="./p-4.jpg" alt="p-4.jpg" class="img-fluid img-ref" id="img-p-4">
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h3>Misión y visión</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <img src="./vision-mision.jpg" alt="vision-mision.jpg" class="img-fluid img-vision">
        </div>
      </div>
      <div class="row reviews">
        <div class="col-md-3">
          <h3>Reseña para Enchu</h3>
          <form action="/review" method="post">
            <div class="mb-3">
              <label for="review_name" class="form-label">Nombre</label>
              <input id="review_name" name="name" type="text" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="review_email" class="form-label">Email</label>
              <input id="review_email" name="email" type="email" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="review_name" class="form-label">Mensaje</label>
              <input id="review_name" name="content" type="text" class="form-control" />
            </div>
            <input
              type="submit"
              value="Enviar reseña"
              class="btn btn-primary"
            />
          </form>
        </div>
        <% for(let i = 0; i < reviews.length; i++) { %>
          <div class="col-md-3 card">
            <h5 class="card-title">Reseña de <%= reviews[i].name %> </h4>
            <p class="card-text"><%= reviews[i].content %></p>
          </div>
          <% } %> 
      </div>
    </div>
    <script>
      let list = [
        "img-p-1",
        "img-p-2",
        "img-p-3",
        "img-p-4",
      ]
      let index = 1;
      setInterval(() => {
        console.log(index)
        if(index >= list.length) index = 0;
        for(let img of list) {
          document.getElementById(img).style.opacity = 0
        }
        document.getElementById(list[index]).style.opacity = 1
        index++
      }, 5000)
    </script>
  </body>
</html>
